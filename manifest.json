{
  "manifest_version": 3,
  "name": "AWS Skill Builder Content Extractor",
  "version": "1.0.0",
  "description": "Automatically extracts and saves content from AWS Skill Builder pages",
  "permissions": [
    "activeTab",
    "downloads",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://skillbuilder.aws/*",
    "https://*.skillbuilder.aws/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "aws-skill-builder-extractor@example.com",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://skillbuilder.aws/*",
        "https://*.skillbuilder.aws/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
